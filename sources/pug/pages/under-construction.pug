extends ../_skeleton
include ../components/countdown

block variables
	- pageName = 'Under Construction'

block page 
	section.section.section-single.bg-gray-700
		.section-single-inner
			.section-single-header: .container
				+logo

			.section-single-main: .container
				h3 We're getting ready to launch in
				.divider-small

				+countdown({ to: '2018-12-31' })

				p: span(style='max-width: 450px;') Our website is under construction, we are working very hard to give you the best experience on our new web site.

				.row.justify-content-center
					.col-lg-7.col-md-10
						form.rd-form.rd-mailform.rd-form-inline.subscribe-form-1( data-form-output='form-output-global' data-form-type='subscribe' method='post' action='bat/rd-mailform.php' )
							.form-wrap
								input.form-input#subscribe-form-email( type='email' name='email' data-constraints='@Email @Required' )
								label.form-label( for='subscribe-form-email' ) E-mail
							.form-button
								button.button.button-primary( type='submit' ) Subscribe


			.section-single-footer: .container
				+rights
